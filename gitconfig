[alias]
  log = "!git log --show-signature"
  amend = "commit --amend"
  count = "shortlog -sn"
  graph = "log --oneline --decorate --date-order --graph"
  reset-author = "commit --amend --reset-author"
  short-status = "status -sb"
  undo = "reset --mixed HEAD^"
  unstage = "reset ."
  wip = "!git add -A && git commit -m 'WIP'"

[color]
  ui = true

[core]
	excludesfile = /Users/dynamite/.gitignore_global
	quotepath = false

[diff]
  tool = "Kaleidoscope"

[difftool]
  prompt = false

[difftool "Kaleidoscope"]
  cmd = "ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\""

[github]
  user = "joedynamite"

[help]
  autocorrect = 1

[merge]
  tool = "Kaleidoscope"

[mergetool]
  prompt = false

[mergetool "Kaleidoscope"]
  cmd = "ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot"
  trustExitCode = true

[pull]
  rebase = true

[push]
  default = "tracking"

[log]
  showSignature = true

[rebase]
  autosquash = true

