[alias]
  amend = "commit --amend"
  count = "shortlog -sn"
  graph = "log --oneline --decorate --date-order --graph"
  loc = "!git ls-files | xargs wc -l"
  reset-author = "commit --amend --reset-author"
  short-status = "status -sb"
  undo = "reset --mixed HEAD^"
  unstage = "reset ."
  wip = "!git add -A && git commit --no-gpg-sign -m 'WIP'"

[color]
  ui = true

[github]
  user = "joedynamite"

[help]
  autocorrect = 1

[pull]
  rebase = true

[push]
  default = "tracking"

[rebase]
  autosquash = true

[user]
  name = Joe Bilt
  email = joebilt@gmail.com
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
