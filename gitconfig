[alias]
  st = "status -sb"
  count = "shortlog -sn"
  undo = "reset --mixed HEAD^"
  amend = "commit --amend"

[color]
  ui = true

[core]
  excludesfile = "~/.gitignore_global"

[diff]
  tool = "Kaleidoscope"

[difftool]
  prompt = false

[difftool "Kaleidoscope"]
  cmd = "ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\""

[github]
  user = "joedynamite"

[help]
  autocorrect = 1

[merge]
  tool = "Kaleidoscope"

[mergetool]
  prompt = false

[mergetool "Kaleidoscope"]
  cmd = "ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot"
  trustExitCode = true

[pull]
  rebase = true

[push]
  default = "tracking"

[rebase]
  autosquash = true

