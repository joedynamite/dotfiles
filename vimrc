au BufRead,BufNewFile *.hamlc set ft=haml

call pathogen#infect()

colorscheme base16-google

filetype plugin indent on

let base16colorspace=256
set background=dark
set clipboard=unnamed
set colorcolumn=81
set cursorline
set expandtab
set list listchars=eol:¬,tab:▸\ ,trail:･
set noantialias
set number
set ruler
set softtabstop=2
set tabstop=2
set t_Co=256
set undofile

syntax on
