au BufRead,BufNewFile *.hamlc set ft=haml

call pathogen#infect()

colorscheme base16-default

filetype plugin indent on

set background=dark
set clipboard=unnamed
set colorcolumn=81
set cursorline
set expandtab
set list listchars=eol:¬,tab:▸\ ,trail:･
set noantialias
set nowrap
set number
set ruler
set softtabstop=2
set tabstop=2

syntax on
